{
  "manifest_version": 3,
  "version": "1.1.0",
  "name": "Stay hydrated",
  "description": "Water Reminder for you",
  "icons": {
    "16": "128.png",
    "48": "128.png",
    "128": "128.png"
  },
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["alarms", "notifications", "storage"]
}
