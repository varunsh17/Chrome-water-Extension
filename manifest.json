{
  "manifest_version": 3,
  "version": "1.1.0",
  "name": "Stay hydrated",
  "description": "Water Reminder for you",
  "icons": {
    "16": "128.png",
    "48": "128.png",
    "128": "128.png"
  },
  "browser_action": {
    "default_popup": "index.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": ["alarms", "notifications"]
}
